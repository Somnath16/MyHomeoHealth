{
  "name": "My Homeo Health",
  "description": "Comprehensive homeopathy clinic management system with AI integration",
  "version": "1.0.0",
  "requirements": {
    "system": {
      "node": ">=18.0.0",
      "npm": ">=9.0.0",
      "postgres": ">=13.0"
    },
    "environment": {
      "required": [
        "DATABASE_URL",
        "GEMINI_API_KEY",
        "SESSION_SECRET"
      ],
      "optional": [
        "PORT",
        "NODE_ENV",
        "PGHOST",
        "PGPORT",
        "PGUSER",
        "PGPASSWORD",
        "PGDATABASE"
      ]
    },
    "development": {
      "scripts": {
        "dev": "Start development server",
        "build": "Build for production",
        "start": "Start production server",
        "db:push": "Update database schema",
        "db:studio": "Open database GUI",
        "check": "Type check"
      },
      "ports": {
        "application": 5000,
        "database": 5432
      }
    },
    "features": {
      "core": [
        "User authentication",
        "Role-based access control",
        "Patient management",
        "Appointment scheduling",
        "Prescription management",
        "Medicine database"
      ],
      "advanced": [
        "AI-powered medicine suggestions",
        "Custom prescription templates",
        "Multi-language support",
        "Analytics dashboard",
        "Template assignment system"
      ]
    },
    "setup_options": [
      {
        "name": "Interactive Setup",
        "command": "./setup.sh",
        "description": "Guided setup with prompts for all configuration"
      },
      {
        "name": "Quick Setup", 
        "command": "./quick-setup.sh",
        "description": "Minimal setup for advanced users"
      },
      {
        "name": "Docker Setup",
        "command": "./docker-setup.sh", 
        "description": "Containerized setup with PostgreSQL"
      },
      {
        "name": "Manual Setup",
        "command": "npm install && npm run db:push",
        "description": "Manual configuration using .env file"
      }
    ],
    "credentials": {
      "admin": {
        "username": "admin",
        "password": "admin123"
      },
      "doctor": {
        "username": "ranajit", 
        "password": "ranajit123"
      }
    }
  }
}